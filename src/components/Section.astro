---
const { color, title, subtitle, paragraph } = Astro.props
const textColor = `text-${color}`
---

<section class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
data-header-color={color}>
    <div class="z-30 relative h-full flex flex-col">
        <header class="flex flex-col ">
            <h2 class=`${textColor} pt-40 text-5xl font-medium`>{title}</h2>
            <p class=`${textColor} text-xl`>{subtitle}</p>
            <p class=`${textColor} text-sm`>{paragraph}</p>
        </header>
        
        <footer class=`flex flex-grow justify-end flex-col ${textColor} pb-3`>
           <slot name="footer" />
        </footer>
    </div>
    
    
    <div class="absolute top-0 bottom-0 z-10 h-full w-full">
        <slot name="background" />
    </div>
</section>